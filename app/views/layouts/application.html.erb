<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header" id="header" style="background-color: black;">
     <nav class="navbar navbar-main navbar-shadow" role="navigation" id="slide-nav">
      <div class="container relative">
       <div class="navbar-header">
        <h2 style="color: white;">Bookers</h2>
        <div id="headermenu">
         <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
          <% if user_signed_in? %>
          <li class="">
           <span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "home", user_path(current_user.id) %></span>
          </li>
          <li class="">
           <span class="glyphicon glyphicon-user" aria-hidden="true"><%= link_to "Users", users_path %></span>
          </li>
          <li class="">
           <span class="glyphicon glyphicon-book" aria-hidden="true"><%= link_to "Books", books_path %></span>
          </li>
          <li class="">
           <span class="glyphicon glyphicon-log-out" aria-hidden="true"><%= link_to "logout", destroy_user_session_path, method: :delete, notice: "Signed out successfully." %></span>
          </li>
          <% else %>
          <li>
           <span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "Home", top_path %></span>
          </li>
          <li>
           <span class="glyphicon glyphicon-link" aria-hidden="true"><%= link_to "About", about_path %></span>
          </li>
          <li>
           <span class="glyphicon glyphicon-edit" aria-hidden="true"><%= link_to "sign up", new_user_registration_path %></span>
          </li>
          <li>
           <span class="glyphicon glyphicon-log-out" aria-hidden="true"><%= link_to "login", new_user_session_path %></span>
          </li>
          <% end %>
         </ul>
        </div>
       </div>
      </div>
     </nav>
    </div>

    <%= yield %>
   <footer class="footer style-2">
    <div class="container">
     <div class="row">
      <div class="col-xs-3">
       <div class="col">
        <p class="no-margin" style="font-size: 11px;">
         CopyRight Infratop.inc
        </p>
       </div>
      </div>
     </div>
    </div>
   </footer>
  </body>
</html>
