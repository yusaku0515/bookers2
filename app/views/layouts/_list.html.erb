<!-- サイドバー -->
   <h2>User info</h2>
   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "profile1.jpg", size: "60x60" %>
   <p>name</p>
    <%= @username %>
   <p>introduction</p>
    <%= @userintroduction %>
   <% if @user_id == @current_user.id %>
   <button type="button" class="btn btn-default">
    <span class="glyphicon glyphicon-wrench" aria-hidden="true"><%= link_to " ", edit_user_path(@user.id) %></span>
   </button>
   <% end %>
   <!-- 投稿フォーム -->
   <h2>New book</h2>
   <%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    <button type="button" class="btn btn-primary">
     <%= f.submit 'Create Book' %>
    </button>
   <% end %>