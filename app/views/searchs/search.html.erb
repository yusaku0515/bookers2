<h2>Users index</h2>
<table class="table table-inverse">
<thead>
<tr>
 <th>image</th>
 <th>name</th>
 <th></th>
</tr>
</thead>
<tbody>
<% @users.each do |user| %>
<tr>
 <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "profile1.jpg", size: "100x100" %></td>
 <td><%= user.name %></td>
 <td><%= link_to "Show", user_path(user.id), class:"text-muted" %></td>
</tr>
<% end %>
</tbody>
</table>