<!-- bookの詳細 -->

 <% if flash[:notice] %><!-- サクセスメッセージ -->
  <div class="flash">
   <%= flash[:notice] %>
  </div>
 <% end %>

<div class="container">
 <div class="row">
  <div class="col-lg-3">
   <%= render 'layouts/list', book: @book %>
  </div>

  <div class="col-xs-9">
   <h2>Book detail</h2>
   <table class="table table-hover table-inverse">
    <tbody>
     <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "profile1.jpg", size: "60x60" %>
          <%= link_to @user.name, user_path(@books.id) %></td>
      <td><%= @books.title %></td>
      <td><%= @books.body %></td>
       <% if current_user.id == @books.user_id %>
      <td><button type="button" class="btn btn-success"><%= link_to "Edit", edit_book_path(@books) %></button></td>
     <td><button type="button" class="btn btn-danger"><%= link_to "Destroy", book_path(@books), method: :delete %></button></td>
     <% end %>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>