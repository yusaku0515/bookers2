<!-- bookの詳細 -->
<div class="container">
 <div class="row">
  <div class="col-lg-3" style="background-color: pink;">
   <%= render 'layouts/list', book: @book %>
  </div>
  <div class="col-lg-9" style="background-color: green;">
   <h2>Book detail</h2>
   <table>
    <tbody>
     <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "profile.jpg", size: "60x60" %>
     <%= link_to @user_name, books_path(@book) %>
     <%= @book.title %>
     <%= @book.body %>
     <%= link_to "edit", edit_book_path(@book) %>
    </tbody>
   </table>
  </div>
 </div>
</div>