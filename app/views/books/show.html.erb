<!-- bookの詳細 -->
<div class="container">
 <div class="row">
  <div class="col-lg-3" style="background-color: pink;">
       <!-- サイドバー -->
   <h2>User info</h2>
   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "profile1.jpg", size: "60x60" %>
   <p>name</p>
    <%= @username %>
   <p>introduction</p>
    <%= @userintroduction %>
   <% if user_signed_in? && current_user.id == @user %>
    <%= link_to "編集", edit_user_path(@user.id) %>
   <% end %>
   <!-- 投稿フォーム -->
   <h2>New book</h2>
   <%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    <button type="button" class="btn btn-primary">
     <%= f.submit 'Create Book' %>
    </button>
   <% end %>
  </div>
  <div class="col-lg-9" style="background-color: green;">
   <h2>Book detail</h2>
   <table>
    <tbody>
     <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "profile1.jpg", size: "60x60" %>
     <%= link_to @username, user_path %>
     <%= @book.title %>
     <%= @book.body %>
     <% if user_signed_in? && current_user.id == @book.user_id %>
     <button type="button" class="btn btn-success">
      <%= link_to "edit", edit_book_path(@book) %>
     </button>
     <button type="button" class="btn btn-danger">
      <%= link_to "destroy", book_path(@book), method: :delete %>
     </button>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>