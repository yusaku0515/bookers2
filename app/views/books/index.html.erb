<!-- booklist -->
<div class="container">
 <div class="row">
  <div class="col-lg-3" style="background-color: orange;">
   <%= render 'layouts/list', book: @book, user: @user %>
  </div>
  <div class="col-lg-9" style="background-color: red;">
   <h2>Books</h2>
   <table>
   	<thead>
   	 <tr>
   	  <th>Title</th>
   	  <th>Opinion</th>
   	 </tr>
   	</thead>
   	<tbody>
   	 <% @books.each do |book| %>
   	  <tr>
   	   <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "profile.jpg", size: "60x60" %></td>
   	   <td><%= book.title %></td>
   	   <td><%= book.body %></td>
   	  </tr>
   	 <% end %>
   	</tbody>
   </table>
  </div>
 </div>
</div>