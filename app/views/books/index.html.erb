<!-- home画面 -->
<div class="container">
 <div class="row">
  <div class="col-lg-3" style="background-color: orange;">
   <%= render 'layouts/list', book: @book %>
  </div>
  <div class="col-lg-9" style="background-color: red;">
   <h2>Books</h2>

   <table>
    <thead>
     <tr>
      <th>Title</th>

      <th>Opinion</th>
     </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
     <tr>
      <td class="user"><%= attachment_image_tag @user_image, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb" %></td>
      <td class="title"><%= @book.title %></td>
      <td class="Opinion"><%= @book.body %></td>
     </tr>
    <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>