<!-- booklist -->
<div class="container">
 <div class="row">
  <div class="col-lg-3">
   <!-- サイドバー -->
<% if @book.errors.any? %><!-- エラー文 -->
  <div class="alert alert-warning">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
   <h2>User info</h2>
   <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "profile1.jpg", size: "60x60" %>
   <h4>name</h4>
   <%= current_user.name %>
   <h4>introduction</h4>
   <%= current_user.introduction %><br>
    <button type="button" class="btn btn-default">
     <span class="glyphicon glyphicon-wrench" aria-hidden="true"><%= link_to "a", edit_user_path(current_user.id) %></span>
    </button>
   <!-- 投稿フォーム -->
   <h2>New book</h2>
   <%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    <button type="button" class="btn btn-primary">
     <%= f.submit 'Create Book' %>
    </button>
   <% end %>
  </div>
  <div class="col-xs-9">
   <h2>Books</h2>
   <table class="table table-hover table-inverse">
   	<thead>
   	 <tr>
      <th></th>
   	  <th>Title</th>
   	  <th>Opinion</th>
   	 </tr>
   	</thead>
   	<tbody>
   	 <% @books.each do |book| %>
   	  <tr>
   	   <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "profile1.jpg", size: "60x60" %></td>
   	   <td><%= link_to book.title, book_path(book.id) %></td>
   	   <td><%= book.body %></td>
   	  </tr>
   	 <% end %>
   	</tbody>
   </table>
  </div>
 </div>
</div>