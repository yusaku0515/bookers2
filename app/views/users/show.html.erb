<!-- home画面 -->
<div class="container">
 <div class="row">
  <!-- サイドバー -->
  <div class="col-lg-3" style="background-color: orange;">
   <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "profile.jpg", size: "60x60" %>

    <p>name</p>
     <%= @user.name %>

    <p>introduction</p>
     <%= @user.introduction %>

    <p><%= link_to "編集", edit_user_path(@user) %></p>
    <!-- 投稿フォーム -->
    <h2>New book</h2>
    <%= form_for(@book) do |f| %>
     <h4>Title</h4>
     <%= f.text_field :title %>
     <h4>Opinion</h4>
     <%= f.text_area :body %><br>
     <%= f.submit 'Create Book' %>
    <% end %>
  </div>

  <div class="col-lg-9" style="background-color: red;">
   <h2>Books</h2>

   <table>
    <thead>
     <tr>
      <th>Title</th>

      <th>Opinion</th>
     </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
     <tr>
      <td class="title"><%= @book.title %></td>
      <td class="Opinion"><%= @book.body %></td>
     </tr>
    <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>