<!-- home画面 -->
 <% if flash[:notice] %><!-- サクセスメッセージ -->
  <div class="flash">
   <%= flash[:notice] %>
  </div>
 <% end %>
<div class="container">
 <div class="row">
  <div class="col-lg-3">
   <%= render 'layouts/list', book: @book %>
  </div>

  <div class="col-xs-9">
   <h2>Books</h2>

   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
       <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "profile1.jpg", size: "60x60" %></td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>