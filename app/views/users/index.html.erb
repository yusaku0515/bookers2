<!-- userlist -->
<div class="container">
  <% if @book.errors.any? %><!-- エラー文 -->
  <div class="alert alert-warning">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
 <div class="row">
  <div class="col-xs-3">
   <!-- サイドバー -->
   <h2>User info</h2>
   <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "profile1.jpg", size: "100x100" %>
   <table class="table">
    <tbody>
    <tr>
     <th>name</th>
     <th><%= current_user.name %></th>
    </tr>
    <tr>
     <th>introduction</th>
     <th><%= current_user.introduction %><br></th>
    </tr>
    </tbody>
   </table>
   <%= link_to edit_user_path(current_user.id) do %>
    <button type="button" class="btn btn-default btn-block">
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    </button>
    <% end %>
   <!-- 投稿フォーム -->
   <h2>New book</h2>
   <%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, class:"form-control" %>
    <h4>Opinion</h4>
    <%= f.text_area :body, class:"form-control" %><br>
    <%= f.submit 'Create Book', class:"btn btn-primary btn-block" %>
   <% end %>
  </div>
  <div class="col-xs-9">
   <h2>Users</h2>
   <table class="table table-hover table-inverse">
   	<thead>
   	 <tr>
   	  <th>image</th>
   	  <th>name</th>
      <th></th>
   	 </tr>
   	</thead>
   	<tbody>
     <% @users.each do |user| %> <!-- @usersの情報をuserに入れる。eachの中は@usersの情報はuserで出てくる。 -->
      <tr>
       <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "profile1.jpg", size: "40x40" %></td>
       <td><%= user.name %></td>
       <td><%= link_to "Show", user_path(user.id), class:"text-muted" %></td>
      </tr>
     <% end %>
   	</tbody>
   </table>
  </div>
 </div>
</div>