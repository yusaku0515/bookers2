<!-- userlist -->
<div class="container">
 <div class="row">
  <div class="col-lg-3" style="background-color: blue;">
   <%= render 'layouts/list', book: @book %>
  </div>
  <div class="col-lg-9" style="background-color: orange;">
   <h2>Users</h2>
   <table>
   	<thead>
   	 <tr>
   	  <th>image</th>
   	  <th>name</th>
   	 </tr>
   	</thead>
   	<tbody>
     <% @user.each do |user| %>
      <tr>
       <td><%= attachment_image_tag @user_image, :profile_image, :fill, 60, 60, fallback: "profile.jpg", size: "60x60" %></td>
       <td><%= user.name %></td>
       <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
     <% end %>
   	</tbody>
   </table>
  </div>
 </div>
</div>